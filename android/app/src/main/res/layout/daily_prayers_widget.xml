<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Layer (Full Size) -->
    <ImageView
        android:id="@+id/widget_background_fill"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/widget_bg_fill"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/widget_background_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/widget_bg_border"
        android:scaleType="fitXY" />

    <!-- Content Layer (With Padding) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Top Section: Countdown and Next Prayer -->
        <RelativeLayout
            android:id="@+id/top_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <Chronometer
                android:id="@+id/widget_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textColor="#D4AF37"
                android:textSize="32sp"
                android:textStyle="bold"
                android:countDown="true" />

            <TextView
                android:id="@+id/widget_next_prayer_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/widget_countdown"
                android:layout_alignParentStart="true"
                android:text="في 5:18 ص"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/widget_prayer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الفجر"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الصلاة التالية بعد"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Bottom Section: 5 Prayers List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_section"
            android:orientation="horizontal"
            android:weightSum="5">

            <!-- Isha -->
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                <TextView android:id="@+id/isha_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Isha" android:textColor="#AAAAAA" android:textSize="12sp" android:layout_marginBottom="8dp"/>
                <FrameLayout android:layout_width="32dp" android:layout_height="32dp" android:layout_marginBottom="8dp">
                    <ImageView android:id="@+id/isha_icon_fill" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/circle_fill" />
                    <ImageView android:id="@+id/isha_icon_border" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/circle_border" />
                    <ImageView android:id="@+id/isha_icon" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ic_isha" android:padding="6dp" />
                </FrameLayout>
                <TextView android:id="@+id/isha_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:00" android:textColor="#AAAAAA" android:textSize="12sp" />
            </LinearLayout>
            
            <!-- Maghrib -->
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                <TextView android:id="@+id/maghrib_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Maghrib" android:textColor="#AAAAAA" android:textSize="12sp" android:layout_marginBottom="8dp"/>
                <FrameLayout android:layout_width="32dp" android:layout_height="32dp" android:layout_marginBottom="8dp">
                    <ImageView android:id="@+id/maghrib_icon_fill" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/circle_fill" />
                    <ImageView android:id="@+id/maghrib_icon_border" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/circle_border" />
                    <ImageView android:id="@+id/maghrib_icon" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ic_maghrib" android:padding="6dp" />
                </FrameLayout>
                <TextView android:id="@+id/maghrib_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:00" android:textColor="#AAAAAA" android:textSize="12sp" />
            </LinearLayout>

            <!-- Asr -->
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                <TextView android:id="@+id/asr_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Asr" android:textColor="#AAAAAA" android:textSize="12sp" android:layout_marginBottom="8dp"/>
                <FrameLayout android:layout_width="32dp" android:layout_height="32dp" android:layout_marginBottom="8dp">
                    <ImageView android:id="@+id/asr_icon_fill" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/circle_fill" />
                    <ImageView android:id="@+id/asr_icon_border" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/circle_border" />
                    <ImageView android:id="@+id/asr_icon" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ic_asr" android:padding="6dp" />
                </FrameLayout>
                <TextView android:id="@+id/asr_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:00" android:textColor="#AAAAAA" android:textSize="12sp" />
            </LinearLayout>

            <!-- Dhuhr -->
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                <TextView android:id="@+id/dhuhr_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dhuhr" android:textColor="#AAAAAA" android:textSize="12sp" android:layout_marginBottom="8dp"/>
                <FrameLayout android:layout_width="32dp" android:layout_height="32dp" android:layout_marginBottom="8dp">
                    <ImageView android:id="@+id/dhuhr_icon_fill" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/circle_fill" />
                    <ImageView android:id="@+id/dhuhr_icon_border" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/circle_border" />
                    <ImageView android:id="@+id/dhuhr_icon" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ic_dhuhr" android:padding="6dp" />
                </FrameLayout>
                <TextView android:id="@+id/dhuhr_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:00" android:textColor="#AAAAAA" android:textSize="12sp" />
            </LinearLayout>

            <!-- Fajr -->
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                <TextView android:id="@+id/fajr_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Fajr" android:textColor="#AAAAAA" android:textSize="12sp" android:layout_marginBottom="8dp"/>
                <FrameLayout android:layout_width="32dp" android:layout_height="32dp" android:layout_marginBottom="8dp">
                    <ImageView android:id="@+id/fajr_icon_fill" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/circle_fill" />
                    <ImageView android:id="@+id/fajr_icon_border" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/circle_border" />
                    <ImageView android:id="@+id/fajr_icon" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ic_fajr" android:padding="6dp" />
                </FrameLayout>
                <TextView android:id="@+id/fajr_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:00" android:textColor="#AAAAAA" android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
